<Window x:Class="ConditioningControlPanel.BubbleCountWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:wv2="clr-namespace:Microsoft.Web.WebView2.Wpf;assembly=Microsoft.Web.WebView2.Wpf"
        Title="Bubble Count Challenge"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Black"
        WindowState="Maximized"
        Topmost="True"
        ShowInTaskbar="False"
        ResizeMode="NoResize">
    
    <Grid x:Name="MainGrid">
        <!-- Video Player Background -->
        <wv2:WebView2 x:Name="VideoPlayer" 
                      HorizontalAlignment="Stretch" 
                      VerticalAlignment="Stretch"/>
        
        <!-- Bubble Overlay Canvas -->
        <Canvas x:Name="BubbleCanvas" 
                Background="Transparent"
                IsHitTestVisible="False"/>
        
        <!-- Top Info Bar -->
        <Border Background="#80000000" 
                VerticalAlignment="Top" 
                Padding="20,10">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <TextBlock Text="ðŸ«§ COUNT THE BUBBLES! ðŸ«§" 
                           FontSize="28" 
                           FontWeight="Bold" 
                           Foreground="#FF69B4"/>
                <TextBlock x:Name="TxtDifficulty"
                           Text=" (Medium)" 
                           FontSize="20" 
                           Foreground="#FFB6C1"
                           VerticalAlignment="Center"
                           Margin="10,0,0,0"/>
            </StackPanel>
        </Border>
        
        <!-- Strict Mode Indicator -->
        <TextBlock x:Name="TxtStrict"
                   Text="ðŸ”’ STRICT"
                   FontSize="16"
                   Foreground="#FF6B6B"
                   VerticalAlignment="Top"
                   HorizontalAlignment="Right"
                   Margin="0,15,20,0"
                   Visibility="Collapsed"/>
        
        <!-- ESC Hint -->
        <TextBlock x:Name="TxtEscHint"
                   Text="Press ESC to skip (won't earn XP)"
                   FontSize="14"
                   Foreground="#888888"
                   VerticalAlignment="Bottom"
                   HorizontalAlignment="Center"
                   Margin="0,0,0,20"/>
    </Grid>
</Window>
