<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>WinExe</OutputType>
    <TargetFramework>net8.0-windows</TargetFramework>
    <Nullable>enable</Nullable>
    <UseWPF>true</UseWPF>
    <UseWindowsForms>true</UseWindowsForms>
    <AssemblyName>ConditioningControlPanel</AssemblyName>
    <RootNamespace>ConditioningControlPanel</RootNamespace>
    <Version>4.0.0</Version>
    <Company>CodeBambi</Company>
    <Product>Conditioning Control Panel</Product>
    <Description>A professional visual conditioning application with gamification features.</Description>
    <Copyright>Copyright Â© 2024-2025 CodeBambi</Copyright>
    <ApplicationIcon>Resources\app.ico</ApplicationIcon>
    <ApplicationManifest>app.manifest</ApplicationManifest>
    <PublishSingleFile>true</PublishSingleFile>
    <SelfContained>true</SelfContained>
    <RuntimeIdentifier>win-x64</RuntimeIdentifier>
    <IncludeNativeLibrariesForSelfExtract>true</IncludeNativeLibrariesForSelfExtract>
    
    <!-- Disable auto-generated assembly info -->
    <GenerateAssemblyInfo>false</GenerateAssemblyInfo>
    
    <!-- Trimming disabled - not supported with WPF -->
    <PublishTrimmed>false</PublishTrimmed>
    
    <!-- Ready to Run -->
    <PublishReadyToRun>true</PublishReadyToRun>
    
    <!-- Deterministic builds -->
    <Deterministic>true</Deterministic>
  </PropertyGroup>

  <ItemGroup>
    <!-- UI Framework -->
    <PackageReference Include="MahApps.Metro" Version="2.4.10" />
    <PackageReference Include="MahApps.Metro.IconPacks" Version="5.0.0" />
    
    <!-- MVVM Framework -->
    <PackageReference Include="CommunityToolkit.Mvvm" Version="8.2.2" />
    
    <!-- Audio Control -->
    <PackageReference Include="NAudio" Version="2.2.1" />
    <PackageReference Include="NAudio.Wasapi" Version="2.2.1" />
    
    <!-- Logging -->
    <PackageReference Include="Serilog" Version="3.1.1" />
    <PackageReference Include="Serilog.Sinks.File" Version="5.0.0" />
    <PackageReference Include="Serilog.Sinks.Console" Version="5.0.0" />
    
    <!-- JSON Settings -->
    <PackageReference Include="Newtonsoft.Json" Version="13.0.3" />
    
    <!-- Security / Encryption -->
    <PackageReference Include="System.Security.Cryptography.ProtectedData" Version="8.0.0" />
    
    <!-- System Tray -->
    <PackageReference Include="Hardcodet.NotifyIcon.Wpf" Version="1.1.0" />
    
    <!-- Embedded Browser -->
    <PackageReference Include="Microsoft.Web.WebView2" Version="1.0.2535.41" />
    
    <!-- SharpDX for Desktop Duplication API (DXGI) -->
    <PackageReference Include="SharpDX" Version="4.2.0" />
    <PackageReference Include="SharpDX.DXGI" Version="4.2.0" />
    <PackageReference Include="SharpDX.Direct3D11" Version="4.2.0" />
  </ItemGroup>

  <ItemGroup>
    <None Update="appsettings.json">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </None>
  </ItemGroup>

  <ItemGroup>
    <!-- Session files -->
    <None Update="assets\sessions\*.session.json">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </None>
  </ItemGroup>


  <ItemGroup>
    <!-- App icon -->
    <Resource Include="Resources\app.ico" />
    <Resource Include="Resources\logo.png" />
    <Resource Include="Resources\bubble.png" />
    <Resource Include="Resources\discord.png" />
    <Resource Include="Resources\spiral.gif" />
    
    <!-- Avatar Tube images - MUST be Resource for pack:// URIs to work -->
    <Resource Include="Resources\tube.png" />
    
    <!-- Avatar Set 1: Default (Level 1-19) -->
    <Resource Include="Resources\avatar_pose1.png" />
    <Resource Include="Resources\avatar_pose2.png" />
    <Resource Include="Resources\avatar_pose3.png" />
    <Resource Include="Resources\avatar_pose4.png" />
    
    <!-- Avatar Set 2: Level 20+ (Neon/Circuit style) -->
    <Resource Include="Resources\avatar2_pose1.png" />
    <Resource Include="Resources\avatar2_pose2.png" />
    <Resource Include="Resources\avatar2_pose3.png" />
    <Resource Include="Resources\avatar2_pose4.png" />
    
    <!-- Avatar Set 3: Level 50+ (Marionette/Puppet style) -->
    <Resource Include="Resources\avatar3_pose1.png" />
    <Resource Include="Resources\avatar3_pose2.png" />
    <Resource Include="Resources\avatar3_pose3.png" />
    <Resource Include="Resources\avatar3_pose4.png" />
    
    <!-- Avatar Set 4: Level 100+ (Sunglasses/Glamour style) -->
    <Resource Include="Resources\avatar4_pose1.png" />
    <Resource Include="Resources\avatar4_pose2.png" />
    <Resource Include="Resources\avatar4_pose3.png" />
    <Resource Include="Resources\avatar4_pose4.png" />
    
    <!-- Achievement images -->
    <Resource Include="Resources\achievements\*.png" />
  </ItemGroup>

  <ItemGroup>
    <!-- Feature images - explicitly listed to ensure all are included in publish -->
    <Content Include="Resources\features\4new.png;Resources\features\audio_whispers.png;Resources\features\bouncing_text.png;Resources\features\brain_drain.png;Resources\features\Bubble_count.png;Resources\features\Bubble_pop.png;Resources\features\corner_gif.png;Resources\features\flash.png;Resources\features\mandatory_videos.png;Resources\features\Mind_Wipers.png;Resources\features\Phrase_Lock.png;Resources\features\Pink_filter.png;Resources\features\spiral_overlay.png;Resources\features\subliminal.png">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
      <CopyToPublishDirectory>PreserveNewest</CopyToPublishDirectory>
    </Content>
  </ItemGroup>

  <ItemGroup>
    <!-- Sound files - must be copied to output for file system access -->
    <Content Include="Resources\sounds\**\*">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </Content>
    <!-- Subliminal audio files -->
    <Content Include="Resources\sub_audio\**\*">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </Content>
    <!-- Custom spirals folder -->
    <Content Include="Spirals\**\*">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </Content>
  </ItemGroup>

  <!-- Ensure all feature images are copied during publish -->
  <Target Name="CopyFeatureImagesAfterPublish" AfterTargets="Publish">
    <ItemGroup>
      <FeatureImages Include="$(ProjectDir)Resources\features\*.png" />
    </ItemGroup>
    <MakeDir Directories="$(PublishDir)Resources\features" />
    <Copy SourceFiles="@(FeatureImages)" DestinationFolder="$(PublishDir)Resources\features" SkipUnchangedFiles="true" />
    <Message Importance="High" Text="Copied @(FeatureImages->Count()) feature images to publish folder" />
  </Target>
</Project>
