<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>WinExe</OutputType>
    <TargetFramework>net8.0-windows</TargetFramework>
    <Nullable>enable</Nullable>
    <UseWPF>true</UseWPF>
    <UseWindowsForms>true</UseWindowsForms>
    <AssemblyName>ConditioningControlPanel</AssemblyName>
    <RootNamespace>ConditioningControlPanel</RootNamespace>
    <Version>3.0.0</Version>
    <Company>CodeBambi</Company>
    <Product>Conditioning Control Panel</Product>
    <Description>A professional visual conditioning application with gamification features.</Description>
    <Copyright>Copyright Â© 2024-2025 CodeBambi</Copyright>
    <ApplicationIcon>Resources\app.ico</ApplicationIcon>
    <ApplicationManifest>app.manifest</ApplicationManifest>
    <PublishSingleFile>true</PublishSingleFile>
    <SelfContained>true</SelfContained>
    <RuntimeIdentifier>win-x64</RuntimeIdentifier>
    <IncludeNativeLibrariesForSelfExtract>true</IncludeNativeLibrariesForSelfExtract>
    
    <!-- Disable auto-generated assembly info -->
    <GenerateAssemblyInfo>false</GenerateAssemblyInfo>
    
    <!-- Trimming disabled - not supported with WPF -->
    <PublishTrimmed>false</PublishTrimmed>
    
    <!-- Ready to Run -->
    <PublishReadyToRun>true</PublishReadyToRun>
    
    <!-- Deterministic builds -->
    <Deterministic>true</Deterministic>
  </PropertyGroup>

  <ItemGroup>
    <!-- UI Framework -->
    <PackageReference Include="MahApps.Metro" Version="2.4.10" />
    <PackageReference Include="MahApps.Metro.IconPacks" Version="5.0.0" />
    
    <!-- MVVM Framework -->
    <PackageReference Include="CommunityToolkit.Mvvm" Version="8.2.2" />
    
    <!-- Audio Control -->
    <PackageReference Include="NAudio" Version="2.2.1" />
    <PackageReference Include="NAudio.Wasapi" Version="2.2.1" />
    
    <!-- Logging -->
    <PackageReference Include="Serilog" Version="3.1.1" />
    <PackageReference Include="Serilog.Sinks.File" Version="5.0.0" />
    <PackageReference Include="Serilog.Sinks.Console" Version="5.0.0" />
    
    <!-- JSON Settings -->
    <PackageReference Include="Newtonsoft.Json" Version="13.0.3" />
    
    <!-- Security / Encryption -->
    <PackageReference Include="System.Security.Cryptography.ProtectedData" Version="8.0.0" />
    
    <!-- System Tray -->
    <PackageReference Include="Hardcodet.NotifyIcon.Wpf" Version="1.1.0" />
    
    <!-- Embedded Browser -->
    <PackageReference Include="Microsoft.Web.WebView2" Version="1.0.2535.41" />
  </ItemGroup>

  <ItemGroup>
    <None Update="appsettings.json">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </None>
  </ItemGroup>

  <ItemGroup>
    <None Update="Resources\logo.png">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </None>
    <None Update="Resources\**\*">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </None>
  </ItemGroup>

  <ItemGroup>
    <!-- App icon -->
    <Resource Include="Resources\app.ico" />
    
    <!-- Avatar Tube images - MUST be Resource for pack:// URIs to work -->
    <Resource Include="Resources\tube.png" />
    <Resource Include="Resources\avatar_pose1.png" />
    <Resource Include="Resources\avatar_pose2.png" />
    <Resource Include="Resources\avatar_pose3.png" />
    <Resource Include="Resources\avatar_pose4.png" />
    
    <!-- Achievement images -->
    <Resource Include="Resources\achievements\*.png" />
    
    <!-- Feature images -->
    <Resource Include="Resources\features\*.png" />
  </ItemGroup>
</Project>
